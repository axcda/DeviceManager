<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MineFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Account Balance -->
        <LinearLayout
            android:id="@+id/my_balance_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="账户余额"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- All Orders -->
        <LinearLayout
            android:id="@+id/my_orders_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="全部订单"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Modify Shipping Info -->
        <LinearLayout
            android:id="@+id/my_shipping_info_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="修改收货信息"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Change Password -->
        <LinearLayout
            android:id="@+id/my_password_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="修改密码"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Switch Account -->
        <LinearLayout
            android:id="@+id/my_switch_account_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="切换账户"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Feedback -->
        <LinearLayout
            android:id="@+id/my_feedback_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="意见反馈"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Logout -->
        <LinearLayout
            android:id="@+id/my_exit_ll"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="5dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="退出登陆"
                android:textColor="#ff4081"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>